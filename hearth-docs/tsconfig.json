{
  "//": "This file is for editor support only and does not affect compilation.",
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,               // Enable strict mode for better type safety
    "noImplicitAny": true,         // Prevent usage of 'any' type
    "skipLibCheck": true,          // Skip type checking of node_modules
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,       // Improve compatibility with ES modules
    "allowJs": true,               // Allow JS files to be imported
    "resolveJsonModule": true      // Enable importing JSON files
  },
  "include": ["src", "docs", "docusaurus.config.ts", "sidebars.ts"],
  "exclude": [".docusaurus", "build", "node_modules"]
}
